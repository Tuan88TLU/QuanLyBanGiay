<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_marginTop="162dp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/IDHoaDonNhap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/timeNhap"
        android:layout_marginBottom="7dp"
        android:hint="Mã Hóa Đơn"
        android:inputType="text"
        android:textSize="35dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/timeNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextNgayLapHoaDonNhap"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ems="11"
            android:hint="Ngày lập hóa đơn"
            android:inputType="datetime"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/buttonTimeNhapHang"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/TextNgayLapHoaDonNhap"
            android:src="@android:drawable/ic_menu_my_calendar" />
    </LinearLayout>


    <EditText
        android:id="@+id/editTextNhaCungCap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/timeNhap"
        android:layout_marginTop="7dp"
        android:hint="Nhà cung cấp"
        android:inputType="textPersonName"
        android:textSize="35dp" />

</RelativeLayout>